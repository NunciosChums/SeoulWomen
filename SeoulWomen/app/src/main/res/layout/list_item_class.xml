<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/row_title_color"
                tools:text="[초급]"/>

            <TextView
                android:id="@+id/text_class_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/row_title_color"
                tools:text="[돌봄] 영유아 돌봄이(베이비시터)_9월"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <TextView
                style="@style/class_row_title"
                android:text="신청기간 : "/>

            <TextView
                android:id="@+id/text_receive_at"
                style="@style/class_row_value"
                tools:text="2015.12.28 ~ 2016.09.12 18:00"/>

            <TextView
                style="@style/class_row_title"
                android:text="교육기간 : "/>

            <TextView
                android:id="@+id/text_educate_on"
                style="@style/class_row_value"
                tools:text="2016.09.19 ~ 2016.09.30"/>

            <TextView
                style="@style/class_row_title"
                android:text="교육시간 : "/>

            <TextView
                android:id="@+id/text_educate_at"
                style="@style/class_row_value"
                tools:text="월화수목금 09:30 ~ 13:30"/>

            <TextView
                style="@style/class_row_title"
                android:layout_gravity="fill"
                android:text="잔여 : "/>

            <TextView
                android:id="@+id/text_spare"
                style="@style/class_row_value"
                tools:text="0/20명"/>

            <TextView
                style="@style/class_row_title"
                android:layout_gravity="fill"
                android:text="수강료 : "/>

            <TextView
                android:id="@+id/text_fee"
                style="@style/class_row_value"
                tools:text="80,000원"/>

            <TextView
                style="@style/class_row_title"
                android:layout_gravity="fill"
                android:text="접수 : "/>

            <TextView
                android:id="@+id/text_how_to_regist"
                style="@style/class_row_value"
                tools:text="방문, 온라인"/>
        </GridLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>